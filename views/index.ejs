    <title>Weather</title>
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
</head>

<body>

    <div id="pattern">


        <%if(locals.data) { %>
            <h1>Current Weather</h1>
            <form method="post" action="/city" autocomplete="off">
            
                <input type="text" id="cityName" name="city" placeholder="Enter city">
                <button type="submit" >üîç</button>
            
        </form>

            <div class="flex-container">
                <div class="card">

                    <h3 class="city">
                        <%= data.location.name.slice(0,25) %>
                    </h3>
                    <h4 class="city">
                        <%= data.location.region %>
                    </h4>
                    <h4 class="city">
                        <%= data.location.country %>
                    </h4>
                    <h4 class="city">latitude : <%= data.location.lat %>
                    </h4>
                    <h4 class="city">longitude : <%= data.location.lon%>
                    </h4>
                    <!-- <h5>Local time:</h5> -->
                    <h4 id="time" class="city">
                        <%= data.location.localtime.slice(11,16)%>
                    </h4>
                    <h4 id="date" class="city">
                        <%= data.location.localtime.slice(0,10)%>
                    </h4>
                </div>
                <div class="card">

                    <h3>
                        <%= data.current.condition.text %>
                    </h3>
                    <img src="images<%=data.current.condition.icon.slice(28,48)%>"" alt="">
                    <h4>Temperature : <%= data.current.temp_c %> ¬∞C</h4>
                    <h4>Feels like : <%= data.current.feelslike_c %> ¬∞C </h4>
                    <h4>Precipitation : <%= data.current.precip_mm %> mm</h4>
                    <h4>Humidity : <%= data.current.humidity %>%</h4>
                    <h4>Wind Speed : <%= data.current.wind_kph %> kph </h4>

                </div>
                <div class=" card aqi">
                    <h3>Air Quality</h3>
                    <h4>Carbon monoxide : <%= data.current.air_quality.co %>
                    </h4>
                    <h4>Nitrogen dioxide : <%= data.current.air_quality.no2 %>
                    </h4>
                    <h4>Ozone : <%= data.current.air_quality.o3 %>
                    </h4>
                    <h4>Sulpher dioxide : <%= data.current.air_quality.so2 %>
                    </h4>
                    <h4>PM 2.5 : <%= data.current.air_quality.pm2_5 %>
                    </h4>
                    <h4>PM 10 : <%= data.current.air_quality.pm10 %>
                    </h4>
                    <h4>AQI : <%= category %>
                    </h4>
                    <div class="aqi-description <%= aqiClass%>"></div>

                    <h5>*all values are in ¬µg/m<sup>3</sup></h5>
                </div>



            </div>
            <% } else {%>
                <div class="on-start ">
                    <div>
                        <h1>Current Weather</h1>
                        <form method="post" action="/city" autocomplete="off">
            
                            <input type="text" id="cityName" name="city" placeholder="Enter city">
                            <button type="submit" >üîç</button>
                        
                    </form>
                    </div>
                </div>


                <% } %>
